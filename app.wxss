/**app.wxss**/
.userform{
  width: 95%;
  margin:10rpx auto;
  border-radius: 30rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-top:2px solid #f8f8f8;
  border-bottom:2px solid #f8f8f8;
  overflow: hidden;
}

.userinfo {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.long{
  color:#FF3232;
}

.short{
  color:#00E600;
}