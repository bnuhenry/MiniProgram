:host{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.background{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  background: rgba(6,24,31,0.3);
}

.selector{
  position: fixed;
  width: 100%;
  height: 50%;
  bottom: 0;
  background: #fff;
  z-index: 2;
}

  .selected-topbar{
    width: 100%;
    height: 20%;
    display: flex;
    flex-direction: row;
    align-items: center;
  }

    .selected-topbar-date{
      width: 60%;
      height: 100%;
      display: flex;
      font-size: 50rpx;
      font-weight: 500;
      justify-content: center;
      align-items: center;
    }

    .selected-topbar-button{
      width: 20%;
      height: 100%;
      display: flex;
      font-size: 35rpx;
      font-weight: 500;
      color:#2DB7F5;
      justify-content: center;
      align-items: center;
    }
