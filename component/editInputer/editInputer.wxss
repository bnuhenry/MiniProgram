:host{
  width: 100%;
  height: 100%;
}

.background{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(6,24,31,0.3);
  z-index:1;
}

.rest{
  width: 100%;
  height: 30%;
}

.inputForm{
  width: 90%;
  height: 40%;
  display: flex;
  border-radius: 20rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition-duration: 0.5s;
  background: #fbfbfb;
  overflow: hidden;
  z-index:2;
}

  .inputForm-title{
    width: 90%;
    height: 28%;
    color:#E040FB;
    font-size: 35rpx;
    font-weight: 600;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: 2rpx solid #cccccc;
  }

  .inputForm-inputBox{
    width: 90%;
    height: 40%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: 2rpx solid #cccccc;
  }
    .inputForm-inputBox-label{
      width: 70%;
      height: 50rpx;
      display: flex;
      margin: 15rpx auto;
      color:blue;
    }
  
    .inputForm-inputBox-input{
      width: 80%;
      height: 45%;
      color: #666666;
      font-weight: 600;
      border-radius: 20rpx;
      padding-left: 30rpx;
      margin: 15rpx;
      background-color: #ffffff;
    }

    .inputForm-inputBox-fundNamePicker{
      width: 80%;
      height: 45%;
      color:#E040FB;
      font-weight: 600;
      border-radius: 20rpx;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #ffffff;
    }

    .inputForm-inputBox-msg{
      width: 70%;
      height: 45%;
      display: flex;
      justify-content: center;
      align-items: center;
      color: red;
    }

  .inputForm-buttonBar{
    width: 90%;
    height: 28%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

    .inputForm-buttonBar-side{
      width: 50%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .inputForm-buttonBar-side button{
      width: 80%;
      height: 50%;
      display: flex;
      padding:0;
      justify-content: center;
      align-items: center;
    }