:host{
  width: 100%;
  height: 100%;

}

.background{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  background: rgba(6,24,31,0.3);
  z-index: 1;
}

.rest{
  position: fixed;
  top:0;
  width: 100%;
  height: 30%;
}

.editor{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 70%;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  transition:0.5s;
  -webkit-transition: 0.5s;
  transform:translateY(100%);
  overflow: hidden;
  z-index: 2;
}

  .editor-topbar{
    width: 100%;
    height: 15%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 2rpx solid #eee;
  }

    .editor-topbar-title{
      width: 30%;
      height: 100%;
      color:#303F9F;
      font-weight: 600;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .editor-topbar-side{
      width: 35%;
      height: 100%;
      display: flex;
      color:#2DB7F5;
      justify-content: center;
      align-items: center;
    }

      .editor-topbar-button{
        width: 50%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

    .basic-info{
      width: 100%;
      height: 20%;
      display: flex;
      flex-direction: row;
    }

      .userinfo{
        width: 50%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .dateinfo{
        width: 50%;
        height: 100%;
        color:#888888;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .userimage{
        width: 100rpx;
        height: 100rpx;
        border-radius: 50rpx;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .username{
        width: 60%;
        height: 100%;
        display: flex;
        font-size:40rpx;
        justify-content: flex-start;
        align-items: center;
      }

    .detail-input{
      width: 100%;
      height: 30%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

      .detail-input-title{
        width: 90%;
        height: 40%;
        color:#3F51B5;
        display: flex;
        justify-content: flex-start;
        align-items: center;
      }

      .detail-input-box{
        width: 90%;
        height: 60%;
        display: flex;
        justify-content: center;
        align-items: center;
        border-bottom: 2rpx solid #aaa;
      }

        .detail-input-box input{
          width: 90%;
        }

    .edit-msg-bar{
      width: 90%;
      height: 10%;
      display: flex;
      font-size: 30rpx;
      color:red;
      justify-content: center;
      align-items: center;
    }

    .button-box{
      width: 90%;
      height: 10%;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
    }

      .button-box-side{
        width: 45%;
        height: 100%;
        margin: 10rpx 30rpx;
        display: flex;
        justify-content: center;
        align-items: center;
      }

    .renewtimebar{
      width: 90%;
      height: 10%;
      display: flex;
      font-size: 30rpx;
      color:#2DB7F5;
      justify-content: center;
      align-items: center;
    }
