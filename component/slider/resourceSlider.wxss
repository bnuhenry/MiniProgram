:host{
  width: 100%;
  height: 100%;
}

.background{
  position: fixed;
  left: 0;
  top:0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  background: rgba(6,24,31,0.3);
  z-index: 1;
}

.rest{
  position: fixed;
  top:0;
  width: 100%;
  height: 30%;
}

.slider{
  position: fixed;
  left: 0;
  bottom:0;
  width: 100%;
  height: 70%;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  background-color: #fff;
  transition:0.5s;
  -webkit-transition: 0.5s;
  transform:translateY(100%);
  overflow: hidden;
  z-index: 2;
}

  .header{
    width: 100%;
    height: 30%;
    margin:5rpx auto;
    display: flex;
    flex-direction: column;
    justify-content: center; 
    align-items: center;
  }

    .header-toptitle{
      width: 100%;
      height: 50%;
      display: flex;
      justify-content: center; 
      align-items: center;
    }

      .header-toptitle-middle{
        width: 60%;
        height: 100%;
        font-size:35rpx;
        font-weight: 600;
        color:#1976D2;
        display: flex;
        justify-content: center; 
        align-items: center;
      }

      .header-toptitle-side{
        width: 20%;
        height: 100%;
        font-size:30rpx;
        /* color:#2DB7F5; */
        color:#2196F3;
        display: flex;
        justify-content: center; 
        align-items: center;
      }

    .header-optionbox{
      width: 100%;
      height: 50%;
      display: flex;
      align-items: center;
    }

      .header-optionbox-option{
        position: relative;
        width: 50%;
        height: 80rpx;
        font-weight: 600;
        font-size: 30rpx;
        color:#2196F3;
        background-color: #ffffff;
        display: flex;
        justify-content: center; 
        align-items: center;
      }

      .header-optionbox-option-selected{
        position: relative;
        width: 50%;
        height: 95%;
        font-weight: 600;
        font-size: 30rpx;
        background-color:#2196F3;
        color: #ffffff;
        display: flex;
        justify-content: center; 
        align-items: center;
      }

        .header-optionbox-userinfo{
          position: absolute;
          left:10rpx;
          width: 60rpx;
          height: 60rpx;
          border-radius: 30rpx;
          overflow: hidden;
        }

          .header-optionbox-userimg{
            width: 60rpx;
            height: 60rpx;
          }

  .section{
    width: 100%;
    height: 15%;
    margin:20rpx auto;
    display: flex;
    flex-direction: column;
    justify-content: center; 
    align-items: center;
  }

    .sectiontitle{
      width: 90%;
      height: 50%;
      margin:15rpx 0;
      display:flex;
      align-items: center;
    }

    .section-title{
      font-size: 30rpx;
      font-weight: 600;
      color:#FF5722;
    }

    .body-view{
      width: 90%;
      height: 50%;
    }

      .sectiontitle-image{
        margin-left: 30rpx;
        width: 70rpx;
        height: 70rpx;
        border-radius: 35rpx;
        display: flex;
      }

  .buttonbox{
    width: 100%;
    height: 20%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 15rpx;
  }

    .buttonbox button{
      width: 25%;
      height: 50%;
      border-radius: 30rpx;
      padding: 0;
      font-size:30rpx;
      display: flex;
      justify-content: center;
      align-items: center;
    }