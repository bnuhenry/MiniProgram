:host{
  width: 100%;
  height: 100%;
}

.background{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background: rgba(6,24,31,0.3);
}

.stocktrade{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background: rgba(6,24,31,0.3);
  z-index:2;
}

.indexLong{
  color:#FF3232
}

.indexShort{
  color:#00E600
}

.rest{
  position: fixed;
  top:0;
  width: 100%;
  height: 15%;
}

.stockbar{
  position: fixed;
  bottom:0;
  left: 0;
  width: 100%;
  height: 85%;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
  border-top:2px solid #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition:0.5s;
  -webkit-transition: 0.5s;
  transform:translateY(100%);
  overflow: hidden;
  z-index: 1;
}

  .stockbar-title{
    width: 100%;
    height: 8%;
    font:35rpx;
    color:#1976D2;
    display: flex;
    align-items: center;
    border-bottom:2rpx solid #f8f8f8;
  }

      .stockbar-title-name{
        width: 30%;
        height: 100rpx;
        font:35rpx;
        font-weight: 600;
        padding-left: 50rpx;
        display: flex;
        justify-content: flex-start;
        align-items: center;
      }

      .stockbar-title-stockid{
        width: 40%;
        height: 100rpx;
        font:35rpx;
        font-weight: 600;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .stockbar-title-cancel{
        width: 30%;
        height: 100rpx;
        font:35rpx;
        padding-right: 50rpx;
        color:#2DB7F5;
        display: flex;
        justify-content: flex-end;
        align-items: center;
      }

  .stockbar-kline{
    width: 100%;
    height: 22%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

    .stockbar-kline-side{
      width: 15%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
      align-items: center;
    }

      .stockbar-kline-sidebtn{
        width: 100%;
        height: 50%;
        font-size: 30rpx;
        color:#2196F3;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .stockbar-kline-sidebtnActive{
        width: 100%;
        height: 50%;
        font-size: 30rpx;
        font-weight: 600;
        background-color:#BBDEFB;
        color:#2196F3;
        display: flex;
        justify-content: center;
        align-items: center;
      }

    .stockbar-kline-image{
      width: 70%;
      height: 100%;
      display: flex;
    }

  .stockbar-detail{
    width: 100%;
    height: 50%;
    font:35rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

    .stockbar-detail-main{
      width: 100%;
      height: 50%;
      font:35rpx;
      display: flex;
      justify-content: center;
      align-items: center;
    }

      .stockbar-detail-left{
        width: 40%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 30rpx;
      }

      .stockbar-detail-middle{
        width: 35%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 20rpx;
      }

      .stockbar-detail-right{
        width: 25%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 10rpx;
      }

        .stockbar-detail-price{
          width: 100%;
          display: flex;
        }

  .stockbar-inputbar{
    width: 90%;
    height: 20%;
    font:35rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

    .stockbar-inputstockid{
      position: relative;
      width: 100%;
      height: 30%;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #eeeeee;
    }

    .stockbar-emptyinput{
      position: relative;
      width: 100%;
      height: 30%;
    }

      .stockbar-picker{
        width: 25%;
        display: flex;
        color:blue;
        justify-content: flex-end;
        align-items: center;
      }

      .stockbar-input{
        width: 50%;
        margin:30rpx auto;
        background-color: #ffffff;
      }

      .stockbar-input-search{
        position: absolute;
        right: 0;
        top:-350rpx;
        border:1rpx solid #dddddd;
        height: 350rpx;
        width: 300rpx;
        background-color: #ffffff;
      }

        .stockbar-input-searchItem{
          width: 100%;
          height: 15%;
          display: flex;
          margin: 5rpx;
          color:#1976D2;
        }

          .stockbar-input-searchItem-symbol{
            width: 40%;
            height: 100%;
            border-bottom:1rpx solid #cccccc;
            display: flex;
            justify-content: flex-start;
            align-items: center;
          }

          .stockbar-input-searchItem-name{
            width: 60%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
          }

    .stockbar-buttonbox{
      width: 100%;
      height: 70%;
      display:flex ;
      justify-content: space-between;
      align-items: center;
    }

      .stockbar-buttonbox button{
        width: 30%;
        height: 80rpx;
        margin:0 15rpx;
        font-size: 25rpx;
        padding:0;
        flex-wrap: nowrap;
        display:flex;
        justify-content: center;
        align-items: center;
      }

  .stocktrade-restup{
    width: 100%;
    height: 30%;
    z-index:3;
  }

  .stocktrade-buy{
    width: 70%;
    height: 60%;
    border-radius: 30rpx;
    display: flex;
