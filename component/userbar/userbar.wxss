:host {
  width: 100%;
  height: 200rpx;
}

.userinfo {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.userimage {
  width: 180rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10rpx auto;
}

.userimage-button{
  width: 120rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  color:#2DB7F5;
}

.usertitle{
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-discribe{
  width: 50%;
  display: flex;
  flex-wrap: wrap;
  margin:auto 20rpx;
}

.userinfo-avatar {
  width: 145rpx;
  height: 145rpx;
  margin: 5rpx;
  border-radius: 50%;
}

.userinfo-username {
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  color: #000;
  margin:0 10rpx;
}

.userrank{
  font-size:35rpx;
  color:blue;
}

.userinfo-nickname {
  color: #aaa;
}