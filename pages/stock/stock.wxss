:host{
  background-color: #F5F8FB;
  position: fixed;
}

.accountform {
  width: 100%;
  height: 30%;
  display: flex;
  font-size: 30rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding:10rpx;
  margin:10rpx 0;
  background-color: #fff;
}

  .userimage{
    width: 120rpx;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-left: 20rpx;
  }

    .userimage image{
      width: 120rpx;
      height: 120rpx;
    }

    .userinfo-username{
      height: 40rpx;
    }

  .stockaccount{
    width: 300rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding-left: 20rpx;
  }

    .stockaccount-title{
      color:#888888;
    }

    .stockaccount-cash{
      color:red
    }

    .stockaccount-click{
      color:blue;
    }

.optionbar{
  width: 100%;
  height: 15%;
  display: flex;
  justify-content: center;
}

  .optionbar-optionbox{
    width: 100%;
    height: 100%;
    display: flex;
  }

    .optionbar-optionbox-option{
      width: 50%;
      height: 100%;
      display: flex;
      color:#2DB7F5;
      background-color:#ffffff;
      font-weight: 600;
      justify-content: center;
      align-items: center;
    }

    .optionbar-optionbox-option-selected{
      width: 50%;
      height: 100%;
      display: flex;
      color:#ffffff;
      background-color:#2DB7F5;
      font-weight: 600;
      justify-content: center;
      align-items: center;
    }

.focus{
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left:20rpx;
  margin:10rpx 0;
  background-color: #fff;
}

  .focus-label{
    width: 96%;
    height: 60rpx;
    display: flex;
    font-size: 25rpx;
    justify-content: center;
    align-items: center;
    border-bottom: 2rpx solid #eeeeee;
  }

  .focus-detail{
    width: 96%;
    height: 600rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

    .focus-stock-up{
      width: 100%;
      height: 60rpx;
      display: flex;
      font-size: 20rpx;
      color:#FF3232;
      justify-content: center;
      align-items: center;
      border-bottom: 2rpx solid #eeeeee;
    }

    .focus-stock-down{
      width: 100%;
      height: 60rpx;
      display: flex;
      font-size: 20rpx;
      color:#00E600;
      justify-content: center;
      align-items: center;
      border-bottom: 2rpx solid #eeeeee;
    }

      .focus-stock-id{
        width: 10%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .focus-stock-name{
        width: 10%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .focus-stock-price{
        width: 15%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .focus-stock-bonds{
        width: 20%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      .focus-stock-benefit{
        width: 25%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

  .stock-buttonbox{
    width: 100%;
    height: 180rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
  }

    .stock-buttonbox-buttonbar{
      width: 100%;
      height: 90rpx;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

      .stock-buttonbox-button{
        width: 32%;
        height: 85rpx;
        border-radius: 20rpx;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

        .stock-buttonbox-button button{
          font-size: 25rpx;
        }
    