:host{
  width: 100%;
  height: 100%;
  background-color: #F5F8FB;
  position: fixed;
}

.accountform {
  width: 100%;
  height: 16%;
  display: flex;
  font-size: 30rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding:10rpx;
  margin:5rpx 0;
  background-color: #fff;
}

  .userimage{
    width: 20%;
    height: 100%;
    display: flex;
    font-size:25rpx;
    flex-direction: column;
    justify-content: center;
    padding-left: 5rpx;
  }
    .userimage-image{
      width: 100%;
      height: 75%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .userimage-image image{
      width: 125rpx;
      height: 125rpx;
      border-radius: 20rpx;
    }

    .userinfo-username{
      width: 100%;
      height: 25%;
      color:#303F9F;
      font-weight: 600;
      line-height: 25rpx;
      display: flex;
      justify-content: center;
      align-items: center;
    }

  .stockaccount-value{
    width: 40%;
    height: 100%;
    display: flex;
    font-size:28rpx;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding-left: 10rpx;
  }

  .stockaccount-analyse{
    width: 40%;
    height: 100%;
    display: flex;
    font-size:28rpx;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding-left: 10rpx;
  }

    .stockaccount-title{
      color:#888888;
    }

    .stockaccount-cash{
      color:#FF3232
    }

    .stockaccount-click{
      color:#448AFF;
    }

.optionbar{
  width: 100%;
  height: 5%;
  display: flex;
  justify-content: center;
}

  .optionbar-optionbox{
    width: 100%;
    height: 100%;
    display: flex;
  }

    .optionbar-optionbox-option{
      width: 50%;
      height: 100%;
      display: flex;
      color:#2DB7F5;
      background-color:#ffffff;
      font-weight: 600;
      justify-content: center;
      align-items: center;
    }

    .optionbar-optionbox-option-selected{
      width: 50%;
      height: 100%;
      display: flex;
      color:#ffffff;
      background-color:#2DB7F5;
      font-weight: 600;
      justify-content: center;
      align-items: center;
    }

.focus{
  width: 100%;
  height: 60%;
  padding-left:20rpx;
  margin:5rpx 0;
  background-color: #fff;
}

  .focus-label{
    width: 96%;
    height: 5%;
    color:#448AFF;
    font-weight: 600;
    display: flex;
    font-size: 25rpx;
    justify-content: center;
    align-items: center;
    border-bottom: 2rpx solid #eeeeee;
  }

  .focus-detail{
    width: 96%;
    height: 95%;
    display: flex;
    flex-direction: column;
  }

    .focus-stock-up{
      width: 100%;
      height: 60rpx;
      display: flex;
      font-size: 20rpx;
      color:#FF3232;
      justify-content: center;
      align-items: center;
      border-bottom: 2rpx solid #eeeeee;
    }

    .focus-stock-down{
      width: 100%;
      height: 60rpx;
      display: flex;
      font-size: 20rpx;
      color:#00E600;
      justify-content: center;
      align-items: center;
      border-bottom: 2rpx solid #eeeeee;
    }

      .focus-stock-id{
        width: 10%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .focus-stock-name{
        width: 10%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .focus-stock-price{
        width: 15%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .focus-stock-yields{
        width: 13%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .focus-stock-capital{
        width: 17%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .focus-stock-bonds{
        width: 20%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      .focus-stock-benefit{
        width: 25%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

  .stock-buttonbox{
    width: 100%;
    height: 15%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
  }

    .stock-buttonbox-buttonbar{
      width: 100%;
      height: 90rpx;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

      .stock-buttonbox-button{
        width: 32%;
        height: 85rpx;
        border-radius: 20rpx;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

        .stock-buttonbox-button button{
          height: 65rpx;
          font-size: 25rpx;
          padding:0;
          border-radius: 15rpx;
          display: flex;
          justify-content: center;
          align-items: center;
        }
    